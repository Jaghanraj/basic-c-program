 #include <stdio.h>

int main()
{
    float amount,rate,years,si;
    printf("enter principal(amount):");
    scanf("%f",&amount);
    printf("enter rate:");
    scanf("%f",&rate);
    printf("enter years:");
    scanf("%f",&years);
    si=amount*rate*years/100;
    printf("the simple intrest value is :%f",si);
    
 return 0;
}


OUTPUT

enter principal(amount):1000
enter rate:2
enter years:2
the simple intrest value is :40.000000
