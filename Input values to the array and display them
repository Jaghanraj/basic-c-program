 #include <stdio.h>

int main()
{
 int arr[5],i;
 for(i=0;i<5;i++)
 {
     printf("Enter a value for arr[%d]\n",i);
     scanf("%d",&arr[i]);
 }
 printf("The array elements are:\n");
 for(i=0;i<5;i++)
 {
     printf("%d\t",arr[i]);
 }
 return 0;
}

 output
 
 Enter a value for arr[0]
10
Enter a value for arr[1]
20
Enter a value for arr[2]
30
Enter a value for arr[3]
40
Enter a value for arr[4]
50
The array elements are:
10      20      30      40      50
